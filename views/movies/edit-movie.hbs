<form method="POST" action="/movies/{{movie._id}}/edit">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input
      class="form-control"
      value="{{movie.title}}"
      type="text"
      name="title of the movie"
    />
    <br />
    <label class="form-label">Genre</label>
    <input
      class="form-control"
      value="{{movie.genre}}"
      type="text"
      name="genre"
    />
    <br />
    <label class="form-label">Plot</label>
    <input
      class="form-control"
      value="{{movie.plot}}"
      type="text"
      name="plot"
    />
    <br />
    <button class="btn btn-primary" type="submit">EDIT</button>
  </div>
</form>